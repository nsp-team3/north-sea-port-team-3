{
    "compilerOptions": {
        "module": "esnext",
        "moduleResolution": "node",
        "lib": ["es2016", "esnext", "dom"],
        "target": "es2020",
        "sourceMap": true,
        "noImplicitAny": true,
        "noImplicitReturns": true,
        "removeComments": true,
        "outDir": "public/js/",
        // "outFile": "public/js/app.js",
        "resolveJsonModule": true,
        "noEmitOnError": true
    },
    "include": [
        "resources/ts/**/*"
    ],
    "exclude": [
        "node_modules",
        "**/*.spec.ts"
    ]
}
